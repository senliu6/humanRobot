<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_dabeijing4_21">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_line"
        android:scaleType="fitXY"
        android:layout_marginTop="@dimen/tou_view_margin_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/tou4_21" />

    <LinearLayout
        android:id="@+id/return_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView">

        <ImageView
            android:layout_width="@dimen/return_arrows_width"
            android:layout_height="@dimen/return_arrows_height"
            android:scaleType="fitXY"
            android:src="@mipmap/choosetask_jiantouzuo4_21" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="任务报告列表"
            android:textColor="#ff02fde8"
            android:textSize="28sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView28"
        android:layout_width="194dp"
        android:layout_height="63dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/tasks_report_text_shape"
        android:gravity="center"
        android:text="2022-04-20"
        android:textColor="#ff02fde8"
        android:textSize="23sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView27"
        app:layout_constraintStart_toEndOf="@+id/textView27" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="194dp"
        android:layout_height="63dp"
        android:layout_marginBottom="54dp"
        android:background="@drawable/tasks_report_text_shape"
        android:gravity="center"
        android:text="2022-04-20"
        android:textColor="#ff02fde8"
        android:textSize="23sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
        app:layout_constraintStart_toStartOf="@+id/report_view_pager_ac" />

    <ImageView
        android:id="@+id/imageView19"
        android:layout_width="512dp"
        android:layout_height="84dp"
        android:background="@mipmap/performmap_xiacengkuang4_21"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/textView27"
        app:layout_constraintEnd_toEndOf="@+id/report_view_pager_ac"
        app:layout_constraintTop_toTopOf="@+id/textView27"
        app:srcCompat="@mipmap/performmap_xiacengkuang4_21" />

    <TextView
        android:id="@+id/tabLeftIv"
        android:layout_width="@dimen/task_his_last_time_btn_width"
        android:layout_height="@dimen/task_his_last_time_btn_height"
        android:background="@mipmap/choosetask_kaishianniu4_21"
        android:gravity="center"
        android:text="最近24小时"
        android:textColor="#fff3f3f3"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@+id/tabMidIv"
        app:layout_constraintStart_toStartOf="@+id/imageView19"
        app:layout_constraintTop_toTopOf="@+id/tabMidIv" />

    <TextView
        android:id="@+id/tabMidIv"
        android:layout_width="@dimen/task_his_last_time_btn_width"
        android:layout_height="@dimen/task_his_last_time_btn_height"
        android:background="@mipmap/choosetask_kaishianniu4_21"
        android:gravity="center"
        android:text="最近一周"
        android:textColor="#fff3f3f3"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView19"
        app:layout_constraintEnd_toStartOf="@+id/tabRightIv"
        app:layout_constraintStart_toEndOf="@+id/tabLeftIv"
        app:layout_constraintTop_toTopOf="@+id/imageView19" />

    <TextView
        android:id="@+id/tabRightIv"
        android:layout_width="@dimen/task_his_last_time_btn_width"
        android:layout_height="@dimen/task_his_last_time_btn_height"
        android:gravity="center"
        android:scaleType="fitXY"
        android:text="最近一月"
        android:textColor="#fff3f3f3"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@+id/tabMidIv"
        app:layout_constraintEnd_toEndOf="@+id/imageView19"
        app:layout_constraintTop_toTopOf="@+id/tabMidIv"
        app:srcCompat="@mipmap/choosetask_kaishianniu4_21" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/report_view_pager_ac"
        app:layout_constraintEnd_toEndOf="@+id/report_view_pager_ac"
        app:layout_constraintStart_toStartOf="@+id/report_view_pager_ac">

        <TextView
            android:layout_marginStart="140dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="创建时间"
            android:textColor="#ff02a496"
            android:textSize="20sp"  />

        <TextView
            android:layout_marginLeft="190dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="任务名称"
            android:textColor="#ff02a496"
            android:textSize="20sp" />

        <TextView
            android:layout_marginLeft="113dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="任务类型"
            android:textColor="#ff02a496"
            android:textSize="20sp" />

        <TextView
            android:layout_marginLeft="70dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="操作员"
            android:textColor="#ff02a496"
            android:textSize="20sp" />

        <TextView
            android:layout_marginLeft="68dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="操作"
            android:textColor="#ff02a496"
            android:textSize="20sp" />
    </LinearLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/report_view_pager_ac"
        android:layout_width="1089dp"
        android:layout_height="360dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/tasks_report_text_shape"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>