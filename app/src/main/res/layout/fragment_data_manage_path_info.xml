<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/return_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/return_margin_top"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="13dp"
            android:layout_height="21dp"
            android:scaleType="fitXY"
            android:src="@mipmap/choosetask_jiantouzuo4_21" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="数据管理"
            android:textColor="#ff02fde8"
            android:textSize="22sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="443dp"
        android:layout_height="595dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ros_map"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8"
        app:srcCompat="@mipmap/performmap_zuokuang4_21" />

    <com.shciri.rosapp.ui.myview.MapView
        android:id="@+id/ros_map"
        android:layout_width="648dp"
        android:layout_height="595dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/lightsteelblue"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/add_path_bt"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_background_selector"
        android:gravity="center"
        android:text="手动添加路径"
        android:textColor="#F4F1F1"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintEnd_toStartOf="@+id/add_rect_bt"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/imageView3" />

    <TextView
        android:id="@+id/add_rect_bt"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:textColor="#F4F1F1"
        android:text="自动覆盖"
        android:textSize="18sp"
        android:background="@drawable/button_background_selector"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/add_path_bt"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/add_path_bt" />

    <Button
        android:id="@+id/record_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="记录"
        app:layout_constraintBottom_toBottomOf="@+id/exit_bt"
        app:layout_constraintEnd_toStartOf="@+id/exit_bt"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/ros_map"
        app:layout_constraintTop_toTopOf="@+id/exit_bt" />

    <Button
        android:id="@+id/exit_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="退出"
        app:layout_constraintBottom_toBottomOf="@+id/add_rect_bt"
        app:layout_constraintEnd_toStartOf="@+id/reset_bt"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/record_bt"
        app:layout_constraintTop_toTopOf="@+id/add_rect_bt" />

    <Button
        android:id="@+id/reset_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="重置"
        app:layout_constraintBottom_toBottomOf="@+id/exit_bt"
        app:layout_constraintEnd_toEndOf="@+id/ros_map"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/exit_bt"
        app:layout_constraintTop_toTopOf="@+id/exit_bt" />
</androidx.constraintlayout.widget.ConstraintLayout>