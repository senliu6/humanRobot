<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitesmoke"
    android:orientation="vertical">

    <devlight.io.library.ntb.NavigationTabBar
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/ntb_horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:ntb_badged="false"
        app:ntb_icon_size_fraction = "0.5"
        app:ntb_badge_bg_color="#ffff0000"
        app:ntb_badge_gravity="bottom"
        app:ntb_badge_position="left"
        app:ntb_badge_title_color="#ffffffff"
        app:ntb_badge_use_typeface="true"
        app:ntb_bg_color="@color/slategrey"
        app:ntb_scaled="false"
        app:ntb_titled="true"
        app:ntb_title_mode="active"
        app:ntb_title_size="8sp"
        app:ntb_typeface="fonts/agency.ttf" />


    <com.shciri.rosapp.myfragment.CustomViewPager
        android:id="@+id/vp_horizontal_ntb"
        app:layout_constraintTop_toBottomOf="@+id/ntb_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

</androidx.constraintlayout.widget.ConstraintLayout>
