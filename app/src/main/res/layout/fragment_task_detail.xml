<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@mipmap/login_dabeijing4_21"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/return_ll"
        android:layout_marginTop="@dimen/return_margin_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="120dp"
            android:scaleType="fitXY"
            android:src="@mipmap/choosetask_jiantouzuo4_21" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="任务列表"
            android:textColor="#ff02fde8"
            android:textSize="22sp" />
    </LinearLayout>


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabs"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginBottom="60dp"
        android:background="@mipmap/performmap_xiacengkuang4_21"
        android:persistentDrawingCache="scrolling"
        app:layout_constraintBottom_toTopOf="@+id/task_detail_view_pager"
        app:layout_constraintEnd_toEndOf="@+id/task_detail_view_pager"
        app:layout_constraintStart_toStartOf="@+id/task_detail_view_pager"
        app:tabIndicator="@drawable/tab_indicator_shape"
        app:tabIndicatorFullWidth="true"
        app:tabIndicatorGravity="center"
        app:tabIndicatorHeight="60dp"
        app:tabSelectedTextColor="#fffbfdfd"
        app:tabTextColor="#fff3f3f3" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/task_detail_view_pager"
        android:layout_width="971dp"
        android:layout_height="414dp"
        android:layout_marginBottom="60dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>