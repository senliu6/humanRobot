<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_dabeijing4_21"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/login_tou4_21" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="1104dp"
        android:layout_height="605dp"
        android:orientation="vertical"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:srcCompat="@mipmap/login_beijing4_21"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="140dp"
        android:layout_height="33dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="53dp"
        android:adjustViewBounds="false"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="@+id/imageView9"
        app:layout_constraintTop_toTopOf="@+id/imageView9"
        app:srcCompat="@mipmap/login_logo4_21" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="105dp"
        android:layout_marginTop="46dp"
        android:includeFontPadding="false"
        android:letterSpacing="0.05"
        android:lineSpacingExtra="1dp"
        android:text="登陆到机器人"
        android:textAlignment="center"
        android:textColor="#ff02fde8"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="19dp"
        android:layout_height="21dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:adjustViewBounds="false"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/username_et"
        app:layout_constraintStart_toStartOf="@+id/username_et"
        app:srcCompat="@mipmap/login_yonghu_4_21" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:includeFontPadding="false"
        android:text="用户"
        android:textColor="#ff02a496"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/imageView4"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="19dp"
        android:layout_height="21dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:adjustViewBounds="false"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/password_et"
        app:layout_constraintStart_toStartOf="@+id/password_et"
        app:srcCompat="@mipmap/login_mima4_21" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:includeFontPadding="false"
        android:text="密码"
        android:textColor="#ff02a496"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView5"
        app:layout_constraintStart_toEndOf="@+id/imageView5"
        app:layout_constraintTop_toTopOf="@+id/imageView5" />

    <EditText
        android:id="@+id/username_et"
        android:layout_width="474dp"
        android:layout_height="75dp"
        android:layout_marginStart="125dp"
        android:layout_marginTop="8dp"
        android:background="@mipmap/login_kuang4_21"
        android:clickable="false"
        android:hint="用户名"
        android:imeOptions="actionDone"
        android:includeFontPadding="false"
        android:selectAllOnFocus="true"
        android:textColorHint="#ff02A496"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/password_et"
        app:layout_constraintStart_toStartOf="@+id/imageView9"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/password_et"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:background="@mipmap/login_kuang4_21"
        android:clickable="false"
        android:hint="请输入密码"
        android:imeOptions="actionDone"
        android:includeFontPadding="false"
        android:inputType="numberPassword"
        android:selectAllOnFocus="true"
        android:textColorHint="#ff02A496"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/login_bt"
        app:layout_constraintEnd_toEndOf="@+id/username_et"
        app:layout_constraintStart_toStartOf="@+id/username_et"
        app:layout_constraintTop_toBottomOf="@+id/username_et" />

    <TextView
        android:id="@+id/login_bt"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_background_selector"
        android:gravity="center"
        android:text="登录"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView9"
        app:layout_constraintEnd_toEndOf="@+id/username_et"
        app:layout_constraintStart_toStartOf="@+id/username_et"
        app:layout_constraintTop_toBottomOf="@+id/password_et" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="255"
        android:columnCount="3"
        android:gravity="center"
        android:rowCount="4"
        app:layout_constraintBottom_toBottomOf="@+id/login_bt"
        app:layout_constraintEnd_toEndOf="@+id/imageView9"
        app:layout_constraintStart_toEndOf="@+id/username_et"
        app:layout_constraintTop_toTopOf="@+id/username_et">

        <ImageView
            android:id="@+id/imageButton1"
            android:layout_width="@dimen/numeric_key_width"
            android:layout_height="@dimen/numeric_key_height"
            android:layout_row="0"
            android:layout_column="0"
            app:srcCompat="@mipmap/login_1" />

        <ImageView
            android:id="@+id/imageButton2"
            android:layout_width="@dimen/numeric_key_width"
            android:layout_height="@dimen/numeric_key_height"
            android:layout_row="0"
            android:layout_column="1"
            app:srcCompat="@mipmap/login_2" />

        <ImageView
            android:id="@+id/imageButton3"
            android:layout_width="@dimen/numeric_key_width"
            android:layout_height="@dimen/numeric_key_height"
            android:layout_row="0"
            android:layout_column="2"
            app:srcCompat="@mipmap/login_3" />

        <ImageView
            android:id="@+id/imageButton4"
            style="@style/NumericStyle"
            android:layout_width="@dimen/numeric_key_width"
            android:layout_height="@dimen/numeric_key_height"
            android:layout_row="1"
            android:layout_column="0"
            app:srcCompat="@mipmap/login_4" />

        <ImageView
            android:id="@+id/imageButton5"
            style="@style/NumericStyle"
            android:layout_width="@dimen/numeric_key_width"
            android:layout_height="@dimen/numeric_key_height"
            android:layout_row="1"
            android:layout_column="1"
            app:srcCompat="@mipmap/login_5" />

        <ImageView
            android:id="@+id/imageButton6"
            style="@style/NumericStyle"
            android:layout_width="@dimen/numeric_key_width"
            android:layout_height="@dimen/numeric_key_height"
            android:layout_row="1"
            android:layout_column="2"
            app:srcCompat="@mipmap/login_6" />

        <ImageView
            android:id="@+id/imageButton7"
            style="@style/NumericStyle"
            android:layout_width="@dimen/numeric_key_width"
            android:layout_height="@dimen/numeric_key_height"
            android:layout_row="2"
            android:layout_column="0"
            app:srcCompat="@mipmap/login_7" />

        <ImageView
            android:id="@+id/imageButton8"
            style="@style/NumericStyle"
            android:layout_width="@dimen/numeric_key_width"
            android:layout_height="@dimen/numeric_key_height"
            android:layout_row="2"
            android:layout_column="1"
            app:srcCompat="@mipmap/login_8" />

        <ImageView
            android:id="@+id/imageButton9"
            style="@style/NumericStyle"
            android:layout_width="@dimen/numeric_key_width"
            android:layout_height="@dimen/numeric_key_height"
            android:layout_row="2"
            android:layout_column="2"
            app:srcCompat="@mipmap/login_9" />

        <ImageView
            android:id="@+id/imageButton10"
            style="@style/NumericStyle"
            android:layout_width="@dimen/numeric_key_width"
            android:layout_height="@dimen/numeric_key_height"
            android:layout_row="3"
            android:layout_column="0"
            app:srcCompat="@mipmap/login_ac" />

        <ImageView
            android:id="@+id/imageButton11"
            style="@style/NumericStyle"
            android:layout_width="@dimen/numeric_key_width"
            android:layout_height="@dimen/numeric_key_height"
            android:layout_row="3"
            android:layout_column="1"
            app:srcCompat="@mipmap/login_0" />

        <ImageView
            android:id="@+id/imageButton12"
            style="@style/NumericStyle"
            android:layout_width="@dimen/numeric_key_width"
            android:layout_height="@dimen/numeric_key_height"
            android:layout_row="3"
            android:layout_column="2"
            app:srcCompat="@mipmap/login_shanchu4_21" />
    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>