<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/health_8beijing4_21"
    android:gravity="center"
    android:orientation="vertical"
    android:scaleType="fitXY">

    <TextView
        android:id="@+id/textView3"
        style="@style/WhiteTextTheme.30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="任务进度"
        app:layout_constraintBottom_toTopOf="@+id/task_detail_percent"
        app:layout_constraintEnd_toEndOf="@+id/textView13"
        app:layout_constraintStart_toStartOf="@+id/task_detail_percent" />

    <TextView
        android:id="@+id/task_detail_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:text="0"
        android:textColor="#ff02fde8"
        android:textSize="200sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.23"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.526" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="%"
        android:textColor="#ff02fde8"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="@+id/task_detail_percent"
        app:layout_constraintStart_toEndOf="@+id/task_detail_percent" />

    <TextView
        android:id="@+id/task_exe_name"
        style="@style/WhiteTextTheme.40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="execute_task_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textView13"
        app:layout_constraintStart_toStartOf="@+id/task_detail_percent"
        app:layout_constraintTop_toBottomOf="@+id/task_detail_percent" />

    <ImageView
        android:id="@+id/task_detail_stop_view"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:background="@mipmap/hongseanniu"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="@+id/task_detail_percent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/task_detail_percent" />

    <ImageView
        android:id="@+id/task_detail_exe_view"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:background="@drawable/start_and_pause_selector"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="@+id/task_detail_percent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.65"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/task_detail_percent" />

</androidx.constraintlayout.widget.ConstraintLayout>