<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="#c0000000"  android:endColor="#c0000000" android:angle="90" /><!--背景颜色渐变 angle为渐变角度-->
            <solid android:color="#5A00FCFF" /><!-- 背景填充颜色 -->
            <stroke android:width="1dp" android:color="@color/ros_bt_line" /><!-- 描边，边框宽度、颜色 -->
            <corners android:radius="8dp" /><!-- 边角圆弧的半径 -->
            <padding android:left="10dp" android:top="0dp" android:right="0dp" android:bottom="0dp" /><!-- 四周留出来的空白 -->
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <gradient android:startColor="#c0000000"  android:endColor="#c0000000" android:angle="90" /><!--背景颜色渐变 angle为渐变角度-->
            <solid android:color="#1AF9FCFC" /><!-- 背景填充颜色 -->
            <stroke android:width="1dp" android:color="@color/ros_bt_line" /><!-- 描边，边框宽度、颜色 -->
            <corners android:radius="8dp" /><!-- 边角圆弧的半径 -->
            <padding android:left="20dp" android:top="0dp" android:right="20dp" android:bottom="0dp" /><!-- 四周留出来的空白 -->
        </shape>
    </item>
</selector>