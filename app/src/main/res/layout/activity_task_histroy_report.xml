<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_dabeijing4_21"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_line"
        android:scaleType="fitXY"
        app:srcCompat="@mipmap/login_tou4_21" />

    <LinearLayout
        android:id="@+id/return_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="13dp"
            android:layout_height="21dp"
            android:layout_marginLeft="120dp"
            android:scaleType="fitXY"
            android:src="@mipmap/choosetask_jiantouzuo4_21" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="任务报告列表"
            android:textColor="#ff02fde8"
            android:textSize="22sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="77dp"
        android:layout_marginTop="55dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tasks_report_text_shape"
            android:gravity="center"
            android:text="2022-04-20"
            android:textColor="#ff02fde8"
            android:textSize="18sp" />

        <TextView
            android:layout_marginLeft="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tasks_report_text_shape"
            android:gravity="center"
            android:text="2022-04-20"
            android:textColor="#ff02fde8"
            android:textSize="18sp" />

        <com.google.android.material.appbar.AppBarLayout
            android:layout_marginLeft="200dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.appbar.AppBarLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="创建时间"
            android:textColor="#ff02a496"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="226dp"
            android:text="任务名称"
            android:textColor="#ff02a496"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="131dp"
            android:text="任务类型"
            android:textColor="#ff02a496"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="52dp"
            android:text="操作员"
            android:textColor="#ff02a496"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="52dp"
            android:text="操作"
            android:textColor="#ff02a496"
            android:textSize="16sp" />
    </LinearLayout>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/report_view_pager_ac"
            android:layout_width="871dp"
            android:layout_height="300dp"
            android:background="@drawable/tasks_report_text_shape"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />
</LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>