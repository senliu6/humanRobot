<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/connect_status"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_marginStart="830dp"
            android:layout_marginTop="25dp"
            android:background="@mipmap/choosetask_duankailianjie4_21" />

        <ImageView
            android:id="@+id/wifi0_status"
            android:layout_width="25dp"
            android:layout_height="21dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="26dp"
            app:srcCompat="@mipmap/wifi_0" />

        <ImageView
            android:id="@+id/network_status"
            android:layout_width="68dp"
            android:layout_height="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="21dp"
            app:srcCompat="@mipmap/liuliang5_12"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/battery_percent_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="24dp"
            android:includeFontPadding="false"
            android:text="100%"
            android:textAlignment="textEnd"
            style="@style/BlackTextTheme.20"
            android:visibility="gone"/>

        <com.shciri.rosapp.ui.view.BatteryView
            android:id="@+id/battery_status"
            android:layout_width="40dp"
            android:layout_height="19dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="28dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/time_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:layout_marginTop="24dp"
            android:includeFontPadding="false"
            android:text="9:41 AM"
            android:textAlignment="center"
            style="@style/BlackTextTheme.20" />
    </LinearLayout>
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="1280dp"
        android:layout_height="51dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_statusBar"
        app:srcCompat="@mipmap/tou4_21"
        android:visibility="gone"/>
</LinearLayout>