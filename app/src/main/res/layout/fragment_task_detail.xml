<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@mipmap/login_dabeijing4_21"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/return_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="@dimen/return_margin_top"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="fitXY"
            android:src="@mipmap/choosetask_jiantouzuo4_21" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="任务列表"
            android:textColor="#ff02fde8"
            android:textSize="22sp" />
    </LinearLayout>


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/task_detail_view_pager"
        android:layout_width="971dp"
        android:layout_height="414dp"
        android:layout_marginBottom="60dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView19"
        android:layout_width="300dp"
        android:layout_height="63dp"
        android:layout_marginBottom="50dp"
        android:background="@mipmap/performmap_xiacengkuang4_21"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/task_detail_view_pager"
        app:layout_constraintEnd_toEndOf="@+id/task_detail_view_pager"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="@+id/task_detail_view_pager"
        app:srcCompat="@mipmap/performmap_xiacengkuang4_21" />

    <TextView
        android:id="@+id/tabLeftIv"
        android:layout_width="166dp"
        android:layout_height="0dp"
        android:layout_marginStart="-4dp"
        android:background="@mipmap/choosetask_kaishianniu4_21"
        android:gravity="center"
        android:scaleType="fitXY"
        android:text="工作视图"
        android:textColor="#fff3f3f3"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView19"
        app:layout_constraintStart_toStartOf="@+id/imageView19"
        app:layout_constraintTop_toTopOf="@+id/imageView19" />

    <TextView
        android:id="@+id/tabRightIv"
        android:layout_width="166dp"
        android:layout_height="0dp"
        android:layout_marginEnd="-4dp"
        android:scaleType="fitXY"
        android:gravity="center"
        android:text="地图视图"
        android:textColor="#fff3f3f3"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView19"
        app:layout_constraintEnd_toEndOf="@+id/imageView19"
        app:layout_constraintTop_toTopOf="@+id/imageView19"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@mipmap/choosetask_kaishianniu4_21" />
</androidx.constraintlayout.widget.ConstraintLayout>