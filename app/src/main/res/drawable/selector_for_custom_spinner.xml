<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="#c0000000"  android:endColor="#c0000000" android:angle="90" /><!--背景颜色渐变 angle为渐变角度-->
            <solid android:color="#091f3F" /><!-- 背景填充颜色 -->
            <stroke android:width="1dp" android:color="@color/ros_bt_line" /><!-- 描边，边框宽度、颜色 -->
            <corners android:radius="8dp" /><!-- 边角圆弧的半径 -->
            <padding android:left="30dp" android:top="8dp" android:right="30dp" android:bottom="8dp" /><!-- 四周留出来的空白 -->
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <gradient android:startColor="#c0000000"  android:endColor="#c0000000" android:angle="90" /><!--背景颜色渐变 angle为渐变角度-->
            <solid android:color="@color/ros_bt_bg" /><!-- 背景填充颜色 -->
            <stroke android:width="1dp" android:color="@color/ros_bt_line" /><!-- 描边，边框宽度、颜色 -->
            <corners android:radius="8dp" /><!-- 边角圆弧的半径 -->
            <padding android:left="30dp" android:top="8dp" android:right="30dp" android:bottom="8dp" /><!-- 四周留出来的空白 -->
        </shape>
    </item>
</selector>