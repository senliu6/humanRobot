<?xml version="1.0" encoding="utf-8"?>

<resources>
    <declare-styleable name="ControllerView">
        <attr name="fingerColor" format="color" />
        <attr name="borderColor" format="color" />
        <attr name="fingerSize" format="dimension" />
        <attr name="radius" format="dimension" />
    </declare-styleable>

    <style name="NumericStyle">
        <item name="android:layout_marginRight">13dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="XSpinnerStyle" parent="android:Widget.ListView.DropDown">
        <!-- 分隔线颜色 -->
        <item name="android:divider">#E5E5E5</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="ThemeSpinner">
        <!-- Color when pressed -->
        <item name="colorAccent">#e6e6e6</item>
        <!-- Default color for the dropdown arrow and line -->
        <item name="colorControlNormal">#e6e6e6</item>
    </style>

    <style name="CustomDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- 颜色 -->
    <style name="WhiteTextTheme">
        <item name="android:textColor">@color/white_f4f1f1</item>
    </style>

    <style name="WhiteTextTheme.20" parent="WhiteTextTheme">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="WhiteTextTheme.22" parent="WhiteTextTheme">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="WhiteTextTheme.24" parent="WhiteTextTheme">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="WhiteTextTheme.26" parent="WhiteTextTheme">
        <item name="android:textSize">26sp</item>
    </style>

    <style name="WhiteTextTheme.28" parent="WhiteTextTheme">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="WhiteTextTheme.30" parent="WhiteTextTheme">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="WhiteTextTheme.40" parent="WhiteTextTheme">
        <item name="android:textSize">40sp</item>
    </style>


    <style name="GrayTextTheme">
        <item name="android:textColor">@color/gray_02a496</item>
    </style>

    <style name="GrayTextTheme.20" parent="GrayTextTheme">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="GrayTextTheme.26" parent="GrayTextTheme">
        <item name="android:textSize">26sp</item>
    </style>

    <style name="GrayTextTheme.30" parent="GrayTextTheme">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="RedTextTheme">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="RedTextTheme.20" parent="RedTextTheme">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="RedTextTheme.30" parent="RedTextTheme">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="BlackTextTheme">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BlackTextTheme.20" parent="BlackTextTheme">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="BlackTextTheme.30" parent="BlackTextTheme">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="BlackTextTheme.40" parent="BlackTextTheme">
        <item name="android:textSize">40sp</item>
    </style>

    <declare-styleable name="CustomProgressBar">
        <attr name="progress" format="integer"/>
        <attr name="maxProgress" format="integer"/>
        <attr name="progressBarColor" format="color"/>
        <attr name="circleColor" format="color"/>
        <attr name="progressTextColor" format="color"/>
        <attr name="progressTextSize" format="dimension"/>
        <attr name="orientation" format="enum">
            <enum name="horizontal" value="0"/>
            <enum name="vertical" value="1"/>
        </attr>
    </declare-styleable>

    <style name="QMUI.Compat.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 自定义内容 -->
    </style>

    <style name="CustomFontStyle" parent="Theme.AppCompat.Light">
        <item name="android:fontFamily">@font/noto</item>
    </style>

    <declare-styleable name="CircularProgressBar">
        <attr name="progressColor" format="color"/>
        <attr name="backgroundColor" format="color"/>
        <attr name="strokeWidth" format="dimension"/>
    </declare-styleable>




</resources>