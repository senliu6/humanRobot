<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:weightSum="6">

    <TextView
        android:id="@+id/create_time_tv"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_weight="1.3"
        android:text="2022-04-21  19:03:00"
        android:textColor="#ff02fde8"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/task_name_tv"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:text="execute_task_2"
        android:textColor="#ff02fde8"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/task_type_tv"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_weight="0.8"
        android:text="组合任务"
        android:textColor="#ff02fde8"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/operator_tv"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_weight="0.8"
        android:text="admin"
        android:textColor="#ff02fde8"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/mode_tv"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_weight="1.1"
        android:text="环境消杀与空气净化"
        android:textColor="#ff01ff7f"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/percentage_tv"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:text="100%"
        android:textColor="#ff01ff7f"
        android:textSize="20sp" />
</LinearLayout>
