<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.control.ChooseTaskFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.shciri.rosapp.ui.myview.StatusBarView
            android:id="@+id/test_statusbar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="118dp"/>

        <ImageView
            app:layout_constraintTop_toBottomOf="@+id/test_statusbar"
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/top_line"
            android:scaleType="fitXY"
            app:srcCompat="@mipmap/login_tou4_21" />

        <LinearLayout
            android:id="@+id/nav_view"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/health_iv"
                android:layout_width="@dimen/choose_task_icon_size_width"
                android:layout_height="@dimen/choose_task_icon_size_height"
                android:scaleType="fitXY"
                android:src="@mipmap/choosetask_jiankang4_21" />

            <ImageView

                android:id="@+id/task_report_iv"
                android:layout_width="@dimen/choose_task_icon_size_width"
                android:layout_height="@dimen/choose_task_icon_size_height"
                android:layout_marginTop="@dimen/choose_task_icon_margin_top"
                android:scaleType="fitXY"
                android:src="@mipmap/choosetask_xuanze4_21" />

            <ImageView
                android:id="@+id/manual_control_iv"
                android:layout_width="@dimen/choose_task_icon_size_width"
                android:layout_height="@dimen/choose_task_icon_size_height"
                android:layout_marginTop="@dimen/choose_task_icon_margin_top"
                android:scaleType="fitXY"
                android:src="@mipmap/choosetask_shoudong4_21" />

            <ImageView
                android:id="@+id/open_drawer_iv"
                android:layout_width="@dimen/choose_task_icon_size_width"
                android:layout_height="@dimen/choose_task_icon_size_height"
                android:layout_marginTop="@dimen/choose_task_icon_margin_top"
                android:scaleType="fitXY"
                android:src="@mipmap/choosetask_shujuguanli4_21" />
        </LinearLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="4dp"
            android:layout_height="0dp"
            android:background="@color/ros_bt_line"
            app:layout_constraintBottom_toBottomOf="@+id/nav_view"
            app:layout_constraintStart_toEndOf="@+id/nav_view"
            app:layout_constraintTop_toTopOf="@+id/nav_view" />

        <LinearLayout
            android:id="@+id/tasks_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/nav_view"
            app:layout_constraintStart_toEndOf="@+id/divider"
            app:layout_constraintTop_toTopOf="@+id/nav_view">

            <com.shciri.rosapp.ui.myview.TaskBtView
                android:id="@+id/task_bt"
                android:layout_width="250dp"
                android:layout_height="200dp"/>

            <com.shciri.rosapp.ui.myview.TaskBtView
                android:id="@+id/imageView32"
                android:layout_width="250dp"
                android:layout_height="200dp"
                android:layout_marginLeft="20dp" />

            <com.shciri.rosapp.ui.myview.TaskBtView
                android:id="@+id/imageView33"
                android:layout_width="250dp"
                android:layout_height="200dp"
                android:layout_marginLeft="20dp" />

            <com.shciri.rosapp.ui.myview.TaskBtView
                android:id="@+id/imageView36"
                android:layout_width="250dp"
                android:layout_height="200dp"
                android:layout_marginLeft="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="@+id/tasks_view"
            app:layout_constraintTop_toBottomOf="@+id/tasks_view">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="循环次数："
                android:textColor="#ff02fde8"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_marginLeft="40dp"
                android:textColor="#ff02fde8"
                android:textSize="25sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:layout_marginLeft="40dp"
                android:textColor="#ff02fde8"
                android:textSize="25sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:layout_marginLeft="40dp"
                android:textColor="#ff02fde8"
                android:textSize="25sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="∞"
                android:layout_marginLeft="40dp"
                android:textColor="#ff02fde8"
                android:textSize="30sp" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>