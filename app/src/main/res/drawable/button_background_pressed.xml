<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <gradient
        android:startColor="#2F6A79"
        android:endColor="#335A6A"
        android:angle="90"
        android:type="linear" /><!--背景颜色渐变 angle为渐变角度-->
    <stroke
        android:width="1dp"
        android:color="#04969F" /><!-- 描边，边框宽度、颜色 -->
    <corners android:radius="8dp" /><!-- 边角圆弧的半径 -->
    <padding
        android:left="3dp"
        android:top="1dp"
        android:right="3dp"
        android:bottom="1dp" /><!-- 四周留出来的空白 -->
</shape>