<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_dabeijing4_21"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:scaleType="fitXY"
        app:srcCompat="@mipmap/login_tou4_21" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="883dp"
        android:layout_height="484dp"
        android:background="@mipmap/login_beijing4_21"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="112dp"
            android:layout_height="26dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="40dp"
            android:adjustViewBounds="false"
            android:scaleType="fitXY"
            app:srcCompat="@mipmap/login_logo4_21" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="112dp"
            android:layout_marginTop="37dp"
            android:text="登陆到机器人"
            android:textColor="#ff02fde8"
            android:textSize="22sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="37dp"
            android:orientation="horizontal">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="369dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="112dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linearLayout_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="17dp"
                        android:layout_marginLeft="8dp"
                        android:adjustViewBounds="false"
                        android:scaleType="fitXY"
                        app:srcCompat="@mipmap/login_yonghu_4_21" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:text="用户"
                        android:textColor="#ff02a496"
                        android:textSize="15sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView_username"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:adjustViewBounds="false"
                    android:scaleType="fitXY"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout_username"
                    app:srcCompat="@mipmap/login_kuang4_21" />

                <EditText
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginEnd="20dp"
                    android:background="@null"
                    android:clickable="false"
                    android:hint="username"
                    android:imeOptions="actionDone"
                    android:selectAllOnFocus="true"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView_username"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout_username" />

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView_username">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="17dp"
                        android:layout_marginLeft="8dp"
                        android:adjustViewBounds="false"
                        android:scaleType="fitXY"
                        app:srcCompat="@mipmap/login_mima4_21" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:text="密码"
                        android:textColor="#ff02a496"
                        android:textSize="15sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:adjustViewBounds="false"
                    android:scaleType="fitXY"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/linearLayout"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                    app:srcCompat="@mipmap/login_kuang4_21" />

                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginEnd="10dp"
                    android:background="@null"
                    android:clickable="false"
                    android:hint="password"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:selectAllOnFocus="true"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                    app:layout_constraintVertical_bias="0.52" />

                <ImageView
                    android:id="@+id/loginBt"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="35dp"
                    android:background="@drawable/ros_login_bg_selector"
                    android:scaleType="fitXY"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView4" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="41dp"
                android:layout_marginTop="18dp"
                android:alpha="255"
                android:columnCount="3"
                android:gravity="center"
                android:rowCount="4">

                <ImageView
                    android:id="@+id/imageButton1"
                    android:layout_width="@dimen/numeric_key_width"
                    android:layout_height="@dimen/numeric_key_height"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:scaleType="fitXY"
                    app:srcCompat="@mipmap/login_1" />

                <ImageView
                    android:id="@+id/imageButton2"
                    android:layout_width="@dimen/numeric_key_width"
                    android:layout_height="@dimen/numeric_key_height"
                    android:layout_row="0"
                    android:layout_column="1"
                    app:srcCompat="@mipmap/login_2" />

                <ImageView
                    android:id="@+id/imageButton3"
                    android:layout_width="@dimen/numeric_key_width"
                    android:layout_height="@dimen/numeric_key_height"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/login_3" />

                <ImageView
                    android:id="@+id/imageButton4"
                    style="@style/NumericStyle"
                    android:layout_width="@dimen/numeric_key_width"
                    android:layout_height="@dimen/numeric_key_height"
                    android:layout_row="1"
                    android:layout_column="0"
                    app:srcCompat="@mipmap/login_4" />

                <ImageView
                    android:id="@+id/imageButton5"
                    style="@style/NumericStyle"
                    android:layout_width="@dimen/numeric_key_width"
                    android:layout_height="@dimen/numeric_key_height"
                    android:layout_row="1"
                    android:layout_column="1"
                    app:srcCompat="@mipmap/login_5" />

                <ImageView
                    android:id="@+id/imageButton6"
                    style="@style/NumericStyle"
                    android:layout_width="@dimen/numeric_key_width"
                    android:layout_height="@dimen/numeric_key_height"
                    android:layout_row="1"
                    android:layout_column="2"
                    app:srcCompat="@mipmap/login_6" />

                <ImageView
                    android:id="@+id/imageButton7"
                    style="@style/NumericStyle"
                    android:layout_width="@dimen/numeric_key_width"
                    android:layout_height="@dimen/numeric_key_height"
                    android:layout_row="2"
                    android:layout_column="0"
                    app:srcCompat="@mipmap/login_7" />

                <ImageView
                    android:id="@+id/imageButton8"
                    style="@style/NumericStyle"
                    android:layout_width="@dimen/numeric_key_width"
                    android:layout_height="@dimen/numeric_key_height"
                    android:layout_row="2"
                    android:layout_column="1"
                    app:srcCompat="@mipmap/login_8" />

                <ImageView
                    android:id="@+id/imageButton9"
                    style="@style/NumericStyle"
                    android:layout_width="@dimen/numeric_key_width"
                    android:layout_height="50dp"
                    android:layout_row="2"
                    android:layout_column="2"
                    app:srcCompat="@mipmap/login_9" />

                <ImageView
                    android:id="@+id/imageButton10"
                    style="@style/NumericStyle"
                    android:layout_width="@dimen/numeric_key_width"
                    android:layout_height="@dimen/numeric_key_height"
                    android:layout_row="3"
                    android:layout_column="0"
                    app:srcCompat="@mipmap/login_ac" />

                <ImageView
                    android:id="@+id/imageButton11"
                    style="@style/NumericStyle"
                    android:layout_width="@dimen/numeric_key_width"
                    android:layout_height="@dimen/numeric_key_height"
                    android:layout_row="3"
                    android:layout_column="1"
                    app:srcCompat="@mipmap/login_0" />

                <ImageView
                    android:id="@+id/imageButton12"
                    style="@style/NumericStyle"
                    android:layout_width="@dimen/numeric_key_width"
                    android:layout_height="@dimen/numeric_key_height"
                    android:layout_row="3"
                    android:layout_column="2"
                    app:srcCompat="@mipmap/login_shanchu4_21" />
            </GridLayout>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>