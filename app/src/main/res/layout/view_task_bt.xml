<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="238dp"
    android:layout_height="196dp"
    android:background="@mipmap/choosetask_beijingkuang4_21"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/task_title"
        android:layout_width="178dp"
        android:layout_height="21dp"
        android:includeFontPadding="false"
        android:text="execute_task_1"
        android:textAlignment="center"
        android:textColor="#02fde8"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/task_bt1"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="@+id/task_bt1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.285" />

    <LinearLayout
        android:id="@+id/moreInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        android:gravity="center"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/task_bt1"
        app:layout_constraintEnd_toEndOf="@+id/task_bt1"
        app:layout_constraintStart_toStartOf="@+id/task_bt1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="详情"
            android:textAlignment="center"
            android:textColor="#02fde8"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="4dp"
            app:srcCompat="@mipmap/choosetask_gengduo4_21" />
    </LinearLayout>

    <View
        android:id="@+id/task_bt1"
        android:layout_width="129dp"
        android:layout_height="45dp"
        android:background="@drawable/tasks_report_text_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/task_title"
        app:layout_constraintVertical_bias="0.7" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoSizeMaxTextSize="112sp"
        android:autoSizeMinTextSize="20sp"
        android:autoSizeStepGranularity="2sp"
        android:includeFontPadding="false"
        android:text="空跑"
        android:textAlignment="center"
        android:textColor="#ff02fde8"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/task_bt1"
        app:layout_constraintEnd_toStartOf="@+id/spinner"
        app:layout_constraintStart_toEndOf="@+id/editIv"
        app:layout_constraintTop_toTopOf="@+id/task_bt1" />


    <ImageView
        android:id="@+id/editIv"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/textView10"
        app:layout_constraintEnd_toStartOf="@+id/textView10"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/task_bt1"
        app:layout_constraintTop_toTopOf="@+id/textView10"
        tools:srcCompat="@mipmap/choosetask_bi4_21" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_weight="1"
        android:background="@mipmap/choosetask_jiantouxia4_21"
        android:entries="@array/spinner_string"
        android:popupBackground="@drawable/shape_for_rosapp_spinner"
        android:scaleType="fitXY"
        android:spinnerMode="dropdown"
        app:layout_constraintBottom_toBottomOf="@+id/textView10"
        app:layout_constraintEnd_toEndOf="@+id/task_bt1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView10"
        app:layout_constraintTop_toTopOf="@+id/textView10" />
</androidx.constraintlayout.widget.ConstraintLayout>