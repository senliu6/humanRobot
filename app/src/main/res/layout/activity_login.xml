                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_marginStart="15dp"
                        android:layout_width="16dp"
                        android:layout_height="21dp"
                        android:adjustViewBounds="false"
                        android:scaleType="fitXY"
                        app:srcCompat="@mipmap/login_mima4_21" />

                    <TextView
                        android:layout_marginStart="15dp"
                        android:layout_width="38dp"
                        android:layout_height="18dp"
                        android:includeFontPadding="false"
                        android:text="密码"
                        android:textColor="#ff02a496"
                        android:textSize="18sp" />
                </LinearLayout>


                <com.rey.material.widget.RelativeLayout
                    android:layout_width="481dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="474dp"
                        android:layout_height="75dp"
                        android:layout_centerHorizontal="true"
                        android:adjustViewBounds="false"
                        android:scaleType="fitXY"
                        app:srcCompat="@mipmap/login_kuang4_21" />

                    <EditText
                        android:id="@+id/password_Edit"
                        android:layout_width="126dp"
                        android:layout_height="28dp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="26dp"
                        android:background="@null"
                        android:clickable="false"
                        android:hint="请输入密码"
                        android:includeFontPadding="false"
                        android:inputType="number"
                        android:maxLength="12"
                        android:selectAllOnFocus="true"
                        android:textColor="#02FDE8"
                        android:textColorHint="#02A496"
                        android:textSize="25sp"
                        tools:ignore="TextFields,TouchTargetSizeCheck,TouchTargetSizeCheck" />
                </com.rey.material.widget.RelativeLayout>

                <com.rey.material.widget.RelativeLayout
                    android:layout_marginTop="34dp"
                    android:layout_marginBottom="55dp"
                    android:layout_width="481dp"
                    android:layout_height="84dp">

                    <ImageView
                        android:id="@+id/loginBt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@mipmap/denglu" />
                </com.rey.material.widget.RelativeLayout>
            </LinearLayout>

            <com.shciri.rosapp.ui.myview.LoginKeyboardView
                android:id="@+id/loginKeyboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="51dp"
                android:layout_marginTop="31dp"
                app:layout_constraintStart_toEndOf="@+id/left_item"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/login_mask"
        android:visibility="invisible"
        android:alpha="0.4"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <!--加载布局-->
    <LinearLayout
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/lay_connecting_loading"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/shape_loading_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="invisible">

        <ProgressBar
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:indeterminate="true"
            android:indeterminateTint="@color/cyan" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Loading..."
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_ip_des"
        app:layout_constraintEnd_toStartOf="@+id/tv_ip"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="15dp"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:includeFontPadding="false"
        android:text="Robot IP: "
        android:textColor="#ff02a496"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_ip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="15dp"
        android:layout_width="130dp"
        android:layout_height="18dp"
        android:includeFontPadding="false"
        android:text="IP"
        android:textColor="#ff02a496"
        android:textSize="18sp" />

</androidx.constraintlayout.widget.ConstraintLayout>