<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <include
        layout="@layout/task_control_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/nav_view"
        android:layout_width="242dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@drawable/nav_view_background"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/location_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/drawer_layout_margin_left"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/drawer_icon_size_width"
                android:layout_height="@dimen/drawer_icon_size_height"
                android:layout_gravity="center_vertical"
                app:srcCompat="@mipmap/drawer_1dingwei4_21" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/drawer_text_margin_left"
                android:text="主页"
                android:textColor="#ff02fde8"
                android:textSize="@dimen/drawer_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/drawer_layout_margin_left"
            android:layout_marginTop="@dimen/drawer_layout_margin_top"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/drawer_icon_size_width"
                android:layout_height="@dimen/drawer_icon_size_height"
                android:layout_gravity="center_vertical"
                app:srcCompat="@mipmap/drawer_jiankangguanli4_21" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/drawer_text_margin_left"
                android:text="健康管理"
                android:textColor="#ff02fde8"
                android:textSize="@dimen/drawer_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/drawer_layout_margin_left"
            android:layout_marginTop="@dimen/drawer_layout_margin_top"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/drawer_icon_size_width"
                android:layout_height="@dimen/drawer_icon_size_height"
                android:layout_gravity="center_vertical"
                app:srcCompat="@mipmap/drawer_renwubaogao4_21" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/drawer_text_margin_left"
                android:text="任务报告"
                android:textColor="#ff02fde8"
                android:textSize="@dimen/drawer_text_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/time_task_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/drawer_layout_margin_left"
            android:layout_marginTop="@dimen/drawer_layout_margin_top"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/drawer_icon_size_width"
                android:layout_height="@dimen/drawer_icon_size_height"
                android:layout_gravity="center_vertical"
                app:srcCompat="@mipmap/drawer_dingshirenwu4_21" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/drawer_text_margin_left"
                android:text="定时任务"
                android:textColor="#ff02fde8"
                android:textSize="@dimen/drawer_text_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/manager_data_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/drawer_layout_margin_left"
            android:layout_marginTop="@dimen/drawer_layout_margin_top"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/drawer_icon_size_width"
                android:layout_height="@dimen/drawer_icon_size_height"
                android:layout_gravity="center_vertical"
                app:srcCompat="@mipmap/drawer_shebeizhuangtai4_21" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/drawer_text_margin_left"
                android:text="地图与路径"
                android:textColor="#ff02fde8"
                android:textSize="@dimen/drawer_text_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/system_set_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/drawer_layout_margin_left"
            android:layout_marginTop="@dimen/drawer_layout_margin_top"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/drawer_icon_size_width"
                android:layout_height="@dimen/drawer_icon_size_height"
                android:layout_gravity="center_vertical"
                app:srcCompat="@mipmap/drawer_xitongshezhi4_21" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/drawer_text_margin_left"
                android:text="系统设置"
                android:textColor="#ff02fde8"
                android:textSize="@dimen/drawer_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/drawer_layout_margin_left"
            android:layout_marginTop="@dimen/drawer_layout_margin_top"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/drawer_icon_size_width"
                android:layout_height="@dimen/drawer_icon_size_height"
                android:layout_gravity="center_vertical"
                app:srcCompat="@mipmap/drawer_wangluoguanli4_21" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/drawer_text_margin_left"
                android:text="网络管理"
                android:textColor="#ff02fde8"
                android:textSize="@dimen/drawer_text_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/drawer_close_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/drawer_layout_margin_left"
            android:layout_marginTop="@dimen/drawer_layout_margin_top"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/drawer_icon_size_width"
                android:layout_height="@dimen/drawer_icon_size_height"
                android:layout_gravity="center_vertical"
                app:srcCompat="@mipmap/drawer_zhuxiaodenglu4_21" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/drawer_text_margin_left"
                android:text="注销登录"
                android:textColor="#ff02fde8"
                android:textSize="@dimen/drawer_text_size" />
        </LinearLayout>
    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>