    <ImageView
        app:layout_constraintTop_toBottomOf="@+id/login_statusBar"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/imageView"
        android:layout_width="1280dp"
        android:layout_height="51dp"
        android:scaleType="fitXY"
        app:srcCompat="@mipmap/tou4_21" />

    <androidx.core.widget.ContentLoadingProgressBar
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/connecting_progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:indeterminateTint="#02fde8"
        android:visibility="invisible"
        tools:ignore="UnusedAttribute" />

    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toBottomOf="@+id/connecting_progress_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="3dp"
            android:layout_width="1104dp"
            android:layout_height="605dp"
            android:background="@mipmap/login_beijing4_21"
            android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="181dp"
            android:layout_height="29dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="48dp"
            android:includeFontPadding="false"
            android:letterSpacing="0.05"
            android:lineSpacingExtra="1dp"
            android:text="登陆到机器人"
            android:textAlignment="center"
            android:textColor="#02fde8"
            android:textSize="28sp" />
        </LinearLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="110dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/left_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:id="@+id/linearLayout_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_marginStart="15dp"
                        android:layout_width="19dp"
                        android:layout_height="21dp"
                        android:adjustViewBounds="false"
                        android:scaleType="fitXY"
                        app:srcCompat="@mipmap/login_yonghu_4_21" />

                    <TextView
                        android:layout_marginStart="15dp"
                        android:layout_width="38dp"
                        android:layout_height="18dp"
                        android:includeFontPadding="false"
                        android:text="用户"
                        android:textColor="#ff02a496"
                        android:textSize="18sp" />
                </LinearLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Spinner
                        android:textAlignment="gravity"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:id="@+id/identity_select"
                        style="@style/Widget.AppCompat.Spinner.Underlined"
                        android:theme="@style/ThemeSpinner"
                        android:gravity="center"
                        android:overlapAnchor="false"
                        android:spinnerMode="dropdown"
                        android:background="@drawable/selector_for_custom_spinner_light"
                        android:layout_width="460dp"
                        android:layout_height="60dp" />

                    <ImageView
                        android:id="@+id/map_spinner_arrow"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="@dimen/add_task_spinner_row_margin"
                        android:layout_centerVertical="true"
                        app:srcCompat="@mipmap/login_jiantou4_21"
                        app:layout_constraintBottom_toBottomOf="@id/identity_select"
                        app:layout_constraintEnd_toEndOf="@id/identity_select"
                        app:layout_constraintTop_toTopOf="@id/identity_select" />

                </androidx.constraintlayout.widget.ConstraintLayout>


